{
  "name": "@better-docusign/api",
  "version": "0.2.0",
  "description": "Server-side: JWT auth, userinfo discovery, envelope + recipient view",
  "type": "module",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "typecheck": "tsc -p . --noEmit",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@better-docusign/core": "workspace:^",
    "jose": "^5.9.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "target": "node18",
    "outDir": "dist",
    "platform": "node",
    "external": [
      "@better-docusign/core",
      "jose"
    ],
    "treeshake": true,
    "minify": false
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.17"
  }
}
