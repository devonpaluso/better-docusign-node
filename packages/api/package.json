{
  "name": "@better-docusign/api",
  "version": "0.1.0",
  "description": "Server-side: JWT auth, userinfo discovery, envelope + recipient view",
  "type": "module",
  "files": ["dist"],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@better-docusign/core": "workspace:^",
    "jose": "^5.9.3"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["esm", "cjs"],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "treeshake": true,
    "minify": false,
    "target": "node18",
    "outDir": "dist",
    "platform": "node",
    "external": ["@better-docusign/core", "jose"]
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.4"
  },
  "engines": { "node": ">=18.17" }
}
